<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/genres_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="6dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:text="genres"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="@id/image_item_id"
                app:layout_constraintStart_toEndOf="@+id/image_item_id"
                app:layout_constraintTop_toBottomOf="@+id/rating_item_id"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/overview_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="5dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:text="Overview"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="@id/image_item_id"
                app:layout_constraintStart_toEndOf="@+id/image_item_id"
                app:layout_constraintTop_toBottomOf="@+id/genres_item_id"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/rating_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="4dp"
                android:text="rating"
                android:textColor="#2196F3"
                android:textSize="11sp"
                android:textStyle="italic"
                app:flow_verticalAlign="center"
                app:layout_constraintStart_toEndOf="@+id/image_item_id"
                app:layout_constraintTop_toBottomOf="@+id/movie_item_id"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/movie_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:text="movie"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="@id/image_item_id"
                app:layout_constraintStart_toEndOf="@+id/image_item_id"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="NotSibling" />

            <ImageView
                android:id="@+id/image_item_id"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/rating_item_id"
                app:layout_constraintTop_toBottomOf="@+id/movie_item_id"
                app:srcCompat="@drawable/star" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>